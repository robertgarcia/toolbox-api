{
    "env": {
        "node": true,
        "es2021": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "none"]
    },
    "globals": {
        "__dirname": true
    }
}
